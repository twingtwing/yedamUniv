<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.yedam.univ.user.service.UserMapper">

	<resultMap type="co.yedam.univ.user.service.AuthVO" id="authMap">
		<result column="id" property="id"/>
		<result column="author" property="author"/>
	</resultMap>
	
	<resultMap type="co.yedam.univ.user.service.UserVO" id="stuMap">
		<id column="id" property="id"/>
		<result column="id" property="id"/>
		<result column="pw" property="pw"/>
		<result column="name" property="name"/>
		<result column="major" property="major"/>
		<result column="grade" property="grade"/>
		<collection property="authList" resultMap="authMap"/>
	</resultMap>
	<select id="loginStu" resultMap="stuMap">
		SELECT stu_id as id, stu_pw as pw, stu_name as name, author, major, grade
		FROM user_stu
		WHERE STU_ID = #{id}
	</select>
	
	<resultMap type="co.yedam.univ.user.service.UserVO" id="proMap">
		<id column="id" property="id"/>
		<result column="id" property="id"/>
		<result column="pw" property="pw"/>
		<result column="name" property="name"/>
		<result column="major" property="major"/>
		<collection property="authList" resultMap="authMap"/>
	</resultMap>
	<select id="loginPro" resultMap="proMap">
		SELECT pro_id as id, pro_pw as pw, pro_name as name, author,major
		FROM user_pro
		WHERE PRO_ID = #{id}
	</select>
	
	<resultMap type="co.yedam.univ.user.service.UserVO" id="empMap">
		<id column="id" property="id"/>
		<result column="id" property="id"/>
		<result column="pw" property="pw"/>
		<result column="name" property="name"/>
		<collection property="authList" resultMap="authMap"/>
	</resultMap>
	<select id="loginEmp" resultMap="empMap">
		SELECT emp_id as id, emp_pw as pw, emp_name as name, author
		FROM user_emp
		WHERE EMP_ID = #{id}
	</select>
</mapper>