<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-5.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="bcrypt" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
	
	<security:http>
		<!-- 권한없이 접근 가능 -->
		<security:intercept-url pattern="/all/**" access="permitAll()"/>
		
		<security:intercept-url pattern="/stu/**" access="permitAll()"/>
		<security:intercept-url pattern="/pro/**" access="permitAll()"/>
		<!-- 
		<security:intercept-url pattern="/admin/**" access="permitAll()"/>
		 -->
		
		<!-- 권한
		<security:intercept-url pattern="/stu/**" access="hasAuthority('STU')"/>
		<security:intercept-url pattern="/pro/**" access="hasAuthority('PRO')"/>
		-->
		<security:intercept-url pattern="/admin/**" access="hasAuthority('ADMIN')"/>
		 

		<!-- login/logout 페이지-->
		<security:form-login />
		<security:logout/>
		 
		
		<!-- csrf토큰 여부 -->
		<security:csrf disabled="false"/>
		<security:access-denied-handler error-page="/all/noAuth.do"/>
		
	</security:http>
	
	<!-- 
	<bean id="" class=""/>
	-->
	<security:authentication-manager>
		<!-- <security:authentication-provider user-service-ref="">
			<security:password-encoder hash="bcrypt"/>
		</security:authentication-provider>-->
	</security:authentication-manager> 
	

</beans>